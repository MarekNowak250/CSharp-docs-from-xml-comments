<Window x:Class="DescriptorGenerator.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DescriptorGenerator.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <CollectionViewSource x:Key="GroupedItems" Source="{Binding Viewers}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Sort" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <UniformGrid Margin="16,0" Rows="1">
            <StackPanel Orientation="Horizontal" x:Name="LoadPanel">
                <Label Content="Assembly:" VerticalAlignment="Center" FontSize="14"/>

                <Label x:Name="assemblyName" VerticalAlignment="Center" FontSize="14" Content="{Binding AssemblyName}"/>
                <Button Content="Load" Command="{Binding LoadCommand}" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="12, 4" Margin="8,0,0,0" FontSize="14"/>
            </StackPanel>
            <Button Content="Settings" Padding="16,8" VerticalAlignment="Center" HorizontalAlignment="Right" Click="ShowSettings_Click"></Button>
        </UniformGrid>


        <Border BorderThickness="0,0,0,1" Grid.Row="1" Height="1" />
        <Grid x:Name="ProcessPanel" Margin="16,0" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel>
                <Label DockPanel.Dock="Left" Content="Search:" VerticalAlignment="Center" FontSize="14"/>

                <Button DockPanel.Dock="Right" Command="{Binding SearchCommand}" Content="Search" VerticalAlignment="Center" Padding="16,6"/>
                <TextBox DockPanel.Dock="Right" Padding="4,4" VerticalAlignment="Center" Margin="8,0" FontSize="14" Text="{Binding SearchValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            </DockPanel>

            <Border BorderThickness="0,0,0,1" Grid.Row="1" Height="1"/>

            <ListView Margin="0,0,0,16" x:Name="ListViewTypes" HorizontalContentAlignment="Stretch" ItemsSource="{Binding AccessibleTypes}" FontSize="14" Grid.Row="2" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="0, 0, 0, 1 " BorderBrush="{StaticResource TextColor}">
                            <Border.InputBindings>
                                <MouseBinding Command="{Binding DataContext.ProcessCommand, ElementName=ProcessPanel}" CommandParameter="{Binding .}" MouseAction="LeftDoubleClick"/>
                            </Border.InputBindings>
                            <UniformGrid Rows="1" Columns="2" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Padding="4, 2" FontSize="14" MinWidth="340"/>
                                <Button Content="Process" HorizontalAlignment="Right" Padding="8,4" Margin="0,4"  Command="{Binding DataContext.ProcessCommand, ElementName=ProcessPanel}" CommandParameter="{Binding .}"/>
                            </UniformGrid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="{x:Type GroupItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate>
                                            <Expander
                                               Padding="4"
                                                Margin="4"
                                            Background="Transparent"
                                            BorderThickness="1"
                                            BorderBrush="{StaticResource TextColor}"
                                            DataContext="{Binding Items}"
                                            Foreground="Transparent"
                                            IsExpanded="False">
                                                <Expander.Header>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock
                                                        VerticalAlignment="Center"
                                                        FontSize="16"
                                                        FontWeight="Bold"
                                                        Text="{Binding Namespace}" />
                                                    </StackPanel>
                                                </Expander.Header>
                                                <ItemsPresenter />
                                            </Expander>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </GroupStyle.ContainerStyle>
                    </GroupStyle>
                </ListView.GroupStyle>
            </ListView>
        </Grid>
    </Grid>
</Window>
