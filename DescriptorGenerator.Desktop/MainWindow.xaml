<Window x:Class="DescriptorGenerator.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DescriptorGenerator.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <CollectionViewSource x:Key="GroupedItems" Source="{Binding Viewers}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Sort" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" x:Name="LoadPanel" Margin="16,0">
            <Label Content="Assembly:" VerticalAlignment="Center" FontSize="14"/>
           
            <Label x:Name="assemblyName" VerticalAlignment="Center" FontSize="14" Content="{Binding AssemblyName}"/>
            <Button Content="Load" Command="{Binding LoadCommand}" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="12, 4" Margin="8,0,0,0" FontSize="14"/>
        </StackPanel>
        
        <Border BorderThickness="0,0,0,1" Grid.Row="1" BorderBrush="Black" Height="1"/>
        <Grid x:Name="ProcessPanel" Margin="16,0" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <StackPanel Orientation="Horizontal">
                <Label Content="Search:" VerticalAlignment="Center" FontSize="14"/>

                <TextBox VerticalAlignment="Center" FontSize="14" Text="{Binding SearchValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="600"/>
                <Button Command="{Binding SearchCommand}" Content="Search" VerticalAlignment="Center" Margin="8,0,0,0" Padding="8,4"/>
            </StackPanel>

            <Border BorderThickness="0,0,0,1" Grid.Row="1" BorderBrush="Black" Height="1"/>
            
            <ListView x:Name="ListViewTypes" ItemsSource="{Binding AccessibleTypes}" FontSize="14" Grid.Row="2" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="0, 0, 0, 1 " Width="{Binding ActualWidth, ElementName =ListViewTypes}">
                            <Border.InputBindings>
                                <MouseBinding Command="{Binding DataContext.ProcessCommand, ElementName=ProcessPanel}" CommandParameter="{Binding .}" MouseAction="LeftDoubleClick"/>
                            </Border.InputBindings>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="{Binding Name}" Padding="4, 2" FontSize="14" MinWidth="340"/>
                                <Button Content="Process" Command="{Binding DataContext.ProcessCommand, ElementName=ProcessPanel}" CommandParameter="{Binding .}"/>
                            </StackPanel>

                        </Border>

                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="{x:Type GroupItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate>
                                            <Expander
                                            Background="Transparent"
                                            BorderThickness="0"
                                            DataContext="{Binding Items}"
                                            Foreground="Transparent"
                                            IsExpanded="False">
                                                <Expander.Header>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock
                                                        VerticalAlignment="Center"
                                                        FontSize="16"
                                                        FontWeight="Bold"
                                                        Foreground="Black"
                                                        Text="{Binding Namespace}" />
                                                    </StackPanel>
                                                </Expander.Header>
                                                <ItemsPresenter />
                                            </Expander>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </GroupStyle.ContainerStyle>
                    </GroupStyle>
                </ListView.GroupStyle>
            </ListView>
        </Grid>
    </Grid>
</Window>
